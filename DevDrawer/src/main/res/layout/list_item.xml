<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="5dp"
    android:background="@drawable/card">

    <Button
        android:id="@+id/touchArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/imageView"
        android:layout_toLeftOf="@+id/uninstallImageButton"
        android:background="@drawable/listview_button_selector"
        android:text="" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/packageNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@+id/uninstallImageButton"
        android:layout_toRightOf="@+id/imageView"
        android:ellipsize="end"
        android:fontFamily="sans-serif-light"
        android:lines="1"
        android:paddingTop="5dp"
        android:text="Package Name"
        android:textAppearance="@android:style/TextAppearance.Holo.Small"
        android:textColor="#f80"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/appNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageView"
        android:layout_below="@+id/packageNameTextView"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@+id/uninstallImageButton"
        android:layout_toRightOf="@+id/imageView"
        android:ellipsize="end"
        android:fontFamily="sans-serif-light"
        android:gravity="bottom"
        android:paddingBottom="5dp"
        android:text="App Name"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@color/app_name_light" />

    <ImageView
        android:id="@+id/uninstallImageButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignTop="@+id/imageView"
        android:layout_toLeftOf="@+id/appDetailsImageButton"
        android:scaleType="centerInside"
        android:src="@drawable/delete_imageview" />

    <ImageView
        android:id="@+id/appDetailsImageButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageView"
        android:scaleType="centerInside"
        android:src="@drawable/settings_imageview" />

</RelativeLayout>